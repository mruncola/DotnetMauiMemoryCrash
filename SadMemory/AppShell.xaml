<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SadMemory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SadMemory.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="SadMemory">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Location"
        ContentTemplate="{DataTemplate local:LocationPage}"
        Route="LocationPage" />
</Shell>
